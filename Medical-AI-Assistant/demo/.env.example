# Demo Environment Variables
# Copy this file to .env and customize as needed

# Demo Mode Configuration
DEMO_MODE=true
DEMO_VERSION=1.0.0

# Database Configuration
DATABASE_URL=sqlite:///demo/demo.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Authentication
SECRET_KEY=demo-secret-key-for-presentations-only-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
PASSWORD_MIN_LENGTH=8

# Performance Configuration
PERFORMANCE_MODE=fast
RESPONSE_TIMEOUT=2.0
CACHE_ENABLED=true
CACHE_TTL=300
PRELOAD_MODELS=true

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=7
TRACK_USER_INTERACTIONS=true
TRACK_SYSTEM_PERFORMANCE=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_AUTO_SCHEDULE=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups/

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000
FRONTEND_DEV_MODE=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=demo.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=3

# Demo Users (Pre-configured)
DEMO_ADMIN_EMAIL=admin@demo.medai.com
DEMO_ADMIN_PASSWORD=DemoAdmin123!
DEMO_NURSE_EMAIL=nurse.jones@demo.medai.com
DEMO_NURSE_PASSWORD=DemoNurse456!
DEMO_PATIENT_EMAIL=patient.smith@demo.medai.com
DEMO_PATIENT_PASSWORD=DemoPatient789!

# Demo Scenarios
DEMO_SCENARIOS_ENABLED=true
DEMO_SCENARIO_TIMEOUT=900
DEMO_AUTO_RESET=false

# Security Configuration (Demo Relaxed)
DEMO_SECURITY_RELAXED=true
RATE_LIMITING_ENABLED=false
SSL_VERIFY=false
DEBUG_MODE=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5.0

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Demo Presentation Settings
DEMO_BANNER_ENABLED=true
DEMO_TOOLTIPS_ENABLED=true
DEMO_LOADING_ANIMATIONS=true
DEMO_AUTO_SAVE=true
DEMO_SIMPLIFIED_WORKFLOWS=true