# Production Operations Environment Configuration

# Application Settings
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=production_ops
DB_USER=ops_user
DB_PASSWORD=secure_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Alert Configuration
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#production-ops
PAGERDUTY_KEY=your_pagerduty_integration_key
ONCALL_DASHBOARD_URL=http://localhost:8080/oncall

# Email Configuration
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=ops@company.com
SMTP_PASSWORD=email_password
SMTP_FROM=production-ops@company.com

# Healthcare-Specific Settings
HIPAA_COMPLIANCE=true
FDA_REGULATED=true
CLINICAL_VALIDATION_REQUIRED=true
PHI_PROTECTION_LEVEL=strict

# SLA Thresholds
PATIENT_RESPONSE_TIME_TARGET=2000
SYSTEM_AVAILABILITY_TARGET=99.9
DIAGNOSIS_ACCURACY_TARGET=95.0
PHI_ACCESS_COMPLIANCE_TARGET=100.0

# Feature Flag Settings
DEFAULT_ROLLOUT_PERCENTAGE=5
CANARY_DURATION_HOURS=24
FEATURE_FLAG_CACHE_TTL=300

# Analytics Settings
ANALYTICS_RETENTION_DAYS=90
ANONYMIZATION_LEVEL=high
USER_TRACKING_ENABLED=true

# Feedback System Settings
FEEDBACK_PROCESSING_INTERVAL=30000
AUTO_CATEGORIZATION=true
CRITICAL_FEEDBACK_RESPONSE_TIME=3600

# Competitive Analysis Settings
COMPETITOR_UPDATE_FREQUENCY=daily
MARKET_DATA_RETENTION_DAYS=365
THREAT_ASSESSMENT_INTERVAL=86400

# Roadmap Planning Settings
PLANNING_HORIZON_MONTHS=18
STAKEHOLDER_UPDATE_FREQUENCY=weekly
FEATURE_PRIORITIZATION_FRAMEWORK=rice

# Security Settings
API_RATE_LIMIT=1000
API_KEY_ROTATION_DAYS=30
ENCRYPTION_ALGORITHM=aes-256-gcm

# Performance Settings
MAX_MEMORY_USAGE=1024
CPU_THRESHOLD_WARNING=80
CPU_THRESHOLD_CRITICAL=90
DISK_THRESHOLD_WARNING=85
DISK_THRESHOLD_CRITICAL=95

# Health Check Settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Report Generation Settings
DAILY_REPORT_TIME=09:00
WEEKLY_REPORT_DAY=monday
MONTHLY_REPORT_DAY=1
REPORT_RETENTION_DAYS=365

# Integration Settings
ENABLE_SLACK_INTEGRATION=true
ENABLE_EMAIL_INTEGRATION=true
ENABLE_PAGERDUTY_INTEGRATION=true
ENABLE_WEBHOOK_INTEGRATIONS=true

# Compliance Settings
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true

# Development/Testing Settings (override for dev)
DEBUG_ENABLED=false
MOCK_DATA_ENABLED=false
DRY_RUN_MODE=false