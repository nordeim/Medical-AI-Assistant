{
  "openai_config": {
    "model": "gpt-4",
    "temperature": 0.3,
    "max_tokens": 2000,
    "timeout": 30,
    "retry_attempts": 3
  },
  "code_generation": {
    "auto_commit": false,
    "create_tests": true,
    "documentation_required": true,
    "code_style": "pep8",
    "language_preferences": ["python", "javascript", "typescript"]
  },
  "bug_detection": {
    "real_time": true,
    "severity_threshold": 0.7,
    "auto_fix_suggestions": true,
    "scan_frequency": "continuous",
    "supported_languages": ["python", "javascript", "typescript", "java"]
  },
  "optimization": {
    "performance_tracking": true,
    "auto_optimization": false,
    "target_metrics": ["speed", "memory", "readability", "security"],
    "optimization_frequency": "weekly",
    "baseline_metrics": {
      "response_time_ms": 200,
      "memory_usage_mb": 512,
      "cpu_utilization": 70
    }
  },
  "feature_suggestions": {
    "data_driven": true,
    "user_feedback_integration": true,
    "market_analysis": true,
    "trend_analysis": true,
    "suggestion_confidence_threshold": 0.6,
    "max_suggestions_per_cycle": 10
  },
  "ml_models": {
    "sentiment_analysis": {
      "model_name": "textblob",
      "confidence_threshold": 0.8
    },
    "code_completion": {
      "model_path": "models/code_completion",
      "max_suggestions": 5
    },
    "feature_extraction": {
      "algorithm": "tfidf",
      "max_features": 1000
    }
  },
  "automation": {
    "continuous_integration": true,
    "automated_testing": true,
    "deployment_automation": true,
    "monitoring_automation": true,
    "feedback_automation": true
  },
  "quality_gates": {
    "test_coverage_threshold": 80,
    "code_quality_score": 85,
    "security_scan_required": true,
    "performance_benchmark_required": true,
    "documentation_coverage_threshold": 90
  }
}